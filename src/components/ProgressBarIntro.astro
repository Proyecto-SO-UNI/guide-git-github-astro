---
import '../styles/global.css'
---
<div class="progress-bar">
    <div class="progress-bar-content">
        <p>100%</p>
    </div>
</div>
<style>
    .progress-bar{
        padding: 0;
        
    }
    .progress-bar-content{
        padding: 0;
        margin: 0;
        background-color: var(--color-secondary-green);
        color: black;
        width: 50%;
        height: 100%;
        border: 0.1rem solid;
        border-radius: 10px;

    }
    .progress-bar-content p{
        margin: .1rem;
        margin-left: 1rem;
    }
</style>